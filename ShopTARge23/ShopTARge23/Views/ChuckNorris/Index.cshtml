@model ShopTARge23.Models.ChuckNorrisViewModel

<h1>Chuck Norris Joke</h1>

<div class="container">
    <form method="post" asp-action="GetRandomJoke">
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h2>Search for a joke</h2>
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>
</div>

@if (!string.IsNullOrEmpty(Model.JokeText))
{
    <div class="container">
        <div class="form-group col-md-offset-3 col-md-5">
            <p>@Model.JokeText</p>
        </div>
    </div>
}
